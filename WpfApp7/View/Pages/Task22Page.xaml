<Page x:Class="WpfApp7.View.Pages.Task22Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp7.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task22Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 22"
                       FontSize="25"
                       FontWeight="Bold"/>

            <TextBlock Text="m = 5.7"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 10 0 0"/>

            <TextBlock Text="p = 4"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 10 0 0"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Ответ"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Width="120"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Maroon"
                    Foreground="{Binding ElementName=BtnAns, Path=BorderBrush}"
                    BorderThickness="2"/>
            <TextBlock Text="y = "
                       x:Name="TbY"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBlock Text="x = "
                       x:Name="TbX"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBlock Text="t = "
                       x:Name="TbT"
                       FontSize="20"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 23"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="Green"
                    Foreground="{Binding ElementName=BtnNextTask, Path=BorderBrush}"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
