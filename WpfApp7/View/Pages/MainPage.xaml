<Page x:Class="WpfApp7.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp7.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Практическая работа 4"
                       FontSize="30"
                       FontWeight="Bold"/>
            <Button Content="Задания 1-30"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnTasks"
                    Click="BtnTasks_Click"
                    Background="Transparent"
                    BorderBrush="Indigo"
                    Foreground="{Binding ElementName=BtnTasks, Path=BorderBrush}"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
